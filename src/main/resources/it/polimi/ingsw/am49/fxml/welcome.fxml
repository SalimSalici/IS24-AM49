<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.am49.view.gui.controllers.WelcomeController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0">
