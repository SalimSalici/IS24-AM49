<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="mainBackground" stylesheets="@../css/preGame.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.am49.view.gui.controllers.EndGameController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <VBox alignment="CENTER" layoutX="14.0" layoutY="13.0" prefHeight="374.0" prefWidth="569.0" spacing="10.0">
               <children>
                  <Label fx:id="titleLabel" text="GAME OVER" textAlignment="CENTER" textFill="#341e17">
                     <font>
                        <Font name="DejaVu Sans Mono" size="50.0" />
                     </font>
                  </Label>
                  <VBox fx:id="rankingVbox" prefHeight="208.0" prefWidth="539.0" spacing="3.0">
                     <children>
                        <Label fx:id="forfeitLabel" alignment="CENTER" prefHeight="48.0" prefWidth="539.0" text="Tha game was won by forfeit by:">
                           <font>
                              <Font name="DejaVu Sans Mono" size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="78.0" prefWidth="539.0" spacing="10.0">
                           <children>
                              <ImageView fx:id="totemforfImageview" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" />
                              <Label fx:id="winnerforfLabel" alignment="CENTER" text="niconiconiconiconico">
                                 <font>
                                    <Font name="DejaVu Sans Mono Bold" size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox fx:id="labelsHbox" alignment="CENTER" prefHeight="7.0" prefWidth="539.0" spacing="100.0">
                           <children>
                              <AnchorPane prefHeight="16.0" prefWidth="545.0">
                                 <children>
                                    <Label fx:id="playersLabel" layoutX="52.0" text="player" textAlignment="CENTER" textFill="#7a7878">
                                       <font>
                                          <Font name="DejaVu Sans Mono Bold" size="13.0" />
                                       </font>
                                    </Label>
                                    <Label layoutX="302.0" prefHeight="16.0" prefWidth="48.0" text="points" textFill="#7a7878">
                                       <font>
                                          <Font name="DejaVu Sans Mono Bold" size="13.0" />
                                       </font>
                                    </Label>
                                    <Label layoutX="408.0" prefHeight="16.0" prefWidth="81.0" text="objectives" textFill="#7a7878">
                                       <font>
                                          <Font name="DejaVu Sans Mono Bold" size="13.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </AnchorPane>
                           </children>
                        </HBox>
                        <ListView fx:id="rankingListview" focusTraversable="false" prefHeight="184.0" prefWidth="539.0" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="viewboardsButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="135.0" text="VIEW BOARDS" />
                        <Button fx:id="leaveButton" layoutX="184.0" layoutY="10.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="135.0" text="LEAVE">
                           <font>
                              <Font name="DejaVu Sans Mono" size="13.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="20.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
