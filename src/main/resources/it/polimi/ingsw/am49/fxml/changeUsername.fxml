<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="mainBackground" stylesheets="@../css/preGame.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.am49.client.view.gui.controllers.ChangeUsernameController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
         <children>
            <Label text="Select new username">
               <font>
                  <Font name="DejaVu Sans Mono Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="usernameTextfield" alignment="TOP_LEFT" promptText="Enter new username">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="DejaVu Sans Mono Oblique" size="13.0" />
               </font>
            </TextField>
            <Button fx:id="confButton" alignment="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Confirm" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Gebetbuch Fraktur" size="55.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="100.0" right="100.0" />
         </padding>
      </VBox>
      <Button fx:id="exitButton" mnemonicParsing="false" text="EXIT" AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="25.0" />
   </children>
</AnchorPane>
